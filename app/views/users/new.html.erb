

<%= form_for @user do |f| %>
    <% if @user.errors.any? %>
      <ul>
        <% @user.errors.full_messages.each  do |message|  %>
          <li><%= message  %></li>
      <% end %>
  <% end %>
      </ul>
  <ul>
    <li>
      <%= f.label :email %>
      <%= f.email_field :email %>
    </li>

    <li>
      <%= f.label :password %>
      <%= f.password_field :password %>
    </li>

       <%= f.submit "Signup" %>
  </ul>

<% end %>
